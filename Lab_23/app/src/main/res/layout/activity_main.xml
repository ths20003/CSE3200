<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/incrementScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_increment_score"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/resetScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_reset_score"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/incrementScoreButton"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_next_question"
        android:layout_below="@id/incrementScoreButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


    <Button
        android:id="@+id/resetQuestionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_reset_questions"
        android:layout_below="@id/nextQuestionButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


</RelativeLayout>
